{
  "manifest_version": 3,
  "name": "UX Analyzer",
  "version": "0.1.0",
  "description": "Analisa páginas autenticadas e gera relatório UX.",
  "permissions": ["activeTab", "tabs", "downloads", "storage", "scripting"],
  "host_permissions": ["http://localhost:3000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "UX Analyzer",
    "default_popup": "popup.html"
  }
}
